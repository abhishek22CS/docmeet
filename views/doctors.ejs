    <title>Doctor Directory</title>
    <style>
         * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 5%;
            background-color: white;
        }

        .logo {
            color: #6C5CE7;
            font-size: 1.5rem;
            font-weight: bold;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            background-color: #EAE8FD;
            padding: 0.5rem 2rem;
            border-radius: 50px;
        }

        .nav-links a {
            color: #333;
            text-decoration: none;
            font-size: 1rem;
            padding: 0.5rem 1rem;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: #6C5CE7;
        }

        .get-in-touch {
            background-color: #6C5CE7;
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: 50px;
            text-decoration: none;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .get-in-touch:hover {
            background-color: #5849e0;
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
            nav {
                flex-direction: column;
                gap: 1rem;
                padding: 1rem;
            }

            .nav-links {
                flex-direction: column;
                width: 100%;
                text-align: center;
                padding: 1rem;
            }

            .get-in-touch {
                width: 100%;
                text-align: center;
            }
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background-color: #f8fafc;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            gap: 30px;
        }

        .sidebar {
            width: 250px;
            flex-shrink: 0;
        }

        .title {
            color: #64748b;
            font-size: 0.9rem;
            margin-bottom: 20px;
        }

        .specialties {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .specialty-btn {
            padding: 12px 16px;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            background: white;
            text-align: left;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .specialty-btn:hover {
            background: #f1f5f9;
        }

        .specialty-btn.active {
            background: #e0e7ff;
            border-color: #818cf8;
        }

        .doctors-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
            flex: 1;
        }

        .doctor-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .doctor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .doctor-image {
            width: 100%;
            aspect-ratio: 1;
            background: #e0e7ff;
            object-fit: cover;
        }

        .doctor-info {
            padding: 16px;
        }

        .availability {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #22c55e;
            font-size: 0.85rem;
            margin-bottom: 8px;
        }

        .availability::before {
            content: "";
            width: 8px;
            height: 8px;
            background: #22c55e;
            border-radius: 50%;
        }

        .doctor-name {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 4px;
        }

        .doctor-specialty {
            color: #64748b;
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
            }

            .doctors-grid {
                grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            }
        }
    </style>
</head>
